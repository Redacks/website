---
import { Icon } from "astro-icon";

let { lang } = Astro.params;
lang = lang || "de";

function generateNewUrl(lang: string) {
	let urlSplit = Astro.url.pathname.split("/");
	urlSplit[1] = lang;
	return new URL(urlSplit.join("/"), Astro.url);
}
---

<footer
	class="w-full bg-black bg-opacity-[15%] lg:h-[80px] h-[50px] flex items-center lg:px-8 px-4 text-white font-inter justify-between text-[9px] lg:text-base"
>
	<span class="w-full">
		{lang == "de" ? "Erstellt mit" : "Built using"}
		<a
			href="https://astro.build"
			target="_blank"
			class="underline"
			title="Astro Build"
			>Astro<Icon
				name="mdi:external-link"
				class="h-[20px] inline-block"
			/>
		</a>
	</span>
	<div class="flex flex-col items-center w-full text-center">
		<span>Â© Copyright 2023</span>
		<a class="underline" href={"/" + lang + "/privacy"}
			>{
				lang == "de"
					? "Datenschutz / Disclaimer"
					: "Privacy / Disclaimer"
			}</a
		>
	</div>
	<span class="w-full flex justify-end flex-row">
		<a
			href={generateNewUrl("en")}
			class="underline"
			title="Englisch Version">en</a
		>
		{" / "}
		<a href={generateNewUrl("de")} class="underline" title="German Version"
			>de</a
		>
	</span>
</footer>
